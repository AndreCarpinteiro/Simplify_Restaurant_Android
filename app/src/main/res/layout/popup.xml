<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="525dp"
    android:layout_gravity="center"
    android:background="@drawable/cerclebackground">

    <ImageView
        android:id="@+id/imgComida"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_image"
        android:src="@drawable/comida"
    />

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:layout_below="@id/imgComida"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <TextView
            android:id="@+id/popnome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/popdescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="-"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:onClick="decrement"/>

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="0"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/quantity_background"
            />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="+"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:onClick="increment"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço do Produto"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/linearlayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textSize="20sp"
        android:backgroundTint="@color/amarelomanhoso"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>