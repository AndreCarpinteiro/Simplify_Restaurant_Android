<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Reserva">


    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents1"
        android:layout_marginTop="56dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintTop_toBottomOf="@id/title_reserva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_reserva"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <EditText
        android:id="@+id/text_qtdPessoas"
        style="@style/Edit_Text"
        android:hint="Quantidade de pessoas"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_date"
        android:layout_marginTop="20dp"
        android:hint="Selecionar data"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/text_qtdPessoas"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
    />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_reservar2"
        style="@style/Button"
        android:text="@string/title_reserva"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerComponents"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        android:entries="@array/opcoes"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_date"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
